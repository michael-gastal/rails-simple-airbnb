<div class="container">
  <div class="row row-cols-3">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card" style="width: 100%; height: 300px;">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <pre class="card-text"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>     <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></pre>
            <%= link_to 'More info', flat_path(flat), class: "card-link link-primary" %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "card-link link-warning" %>
            <%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-link link-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
